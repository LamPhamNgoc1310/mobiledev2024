<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/black"
    android:orientation="vertical">

    <fragment
        android:id="@+id/my_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="vn.edu.usth.midgroupproject.SearchFragment"
        tools:layout="@layout/fragment_search">
    </fragment>

    <fragment
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_search_bar"
        android:name="vn.edu.usth.midgroupproject.PlaylistFragment"
        tools:layout="@layout/fragment_playlist">

    </fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/playlist"
        android:name="vn.edu.usth.midgroupproject.YourPlaylistFragment"
        tools:layout="@layout/fragment_your_playlist">

    </fragment>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:name="vn.edu.usth.midgroupproject.NavigationFragment"
        tools:layout="@layout/fragment_navigation">

    </fragment>

</RelativeLayout>